<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <!-- NuGet package information -->
    <PackageId>Nett.Easy</PackageId>
    <Version>1.1.0</Version>
    <Authors>tifish</Authors>
    <Company></Company>
    <Description>A wrapper of Nett (.NET library for TOML) for easy reading/writing.</Description>
    <PackageTags>dotnet;toml;Nett</PackageTags>
    <RepositoryUrl>https://github.com/tifish/Nett.Easy</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <!-- Optional but very common -->
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>
  <ItemGroup>
    <None Include="../README.md" Pack="true" PackagePath="/" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Nett" Version="0.15.0" />
  </ItemGroup>
</Project>
